{
  "name": "proof-verification-helper",
  "version": "1.0.0",
  "description": "Intelligent web application for Lean 4 proof verification assistance",
  "private": true,
  "workspaces": [
    "frontend",
    "backend",
    "electron"
  ],
  "scripts": {
    "test": "npm run test:backend && npm run test:frontend",
    "test:backend": "cd backend && npm test",
    "test:frontend": "cd frontend && npm test",
    "test:coverage": "npm run test:coverage:backend && npm run test:coverage:frontend",
    "test:coverage:backend": "cd backend && npm run test:coverage",
    "test:coverage:frontend": "cd frontend && npm run test:coverage",
    "test:integration": "cd backend && npm run test:integration",
    "lint": "npm run lint:backend && npm run lint:frontend",
    "lint:backend": "cd backend && eslint src/**/*.ts",
    "lint:frontend": "cd frontend && eslint src/**/*.tsx src/**/*.ts",
    "build": "npm run build:backend && npm run build:frontend",
    "build:backend": "cd backend && npm run build",
    "build:frontend": "cd frontend && npm run build",
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "dev:backend": "cd backend && npm run dev",
    "dev:frontend": "cd frontend && npm run dev",
    "docker:build": "docker-compose build",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f",
    "setup": "./scripts/setup.sh",
    "docs": "npm run docs:api && npm run docs:build",
    "docs:api": "cd backend && node -e \"require('./dist/docs/swagger').specs\"",
    "clean": "rm -rf backend/dist frontend/dist backend/coverage frontend/coverage",
    "build:app": "./build-app.sh",
    "setup:ollama": "node setup-ollama.js",
    "install:all": "npm install && cd frontend && npm install && cd ../backend && npm install && cd ../electron && npm install && npm run setup:ollama",
    "start:app": "cd electron && npm start"
  },
  "devDependencies": {
    "@types/jest": "^30.0.0",
    "@types/supertest": "^6.0.3",
    "@types/swagger-jsdoc": "^6.0.4",
    "@types/swagger-ui-express": "^4.1.8",
    "concurrently": "^8.2.2",
    "jest": "^29.7.0",
    "supertest": "^7.1.4",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1",
    "ts-jest": "^29.4.5"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "express-rate-limit": "^8.2.1",
    "express-validator": "^7.3.1",
    "helmet": "^8.1.0",
    "winston": "^3.18.3",
    "winston-daily-rotate-file": "^5.0.0"
  }
}

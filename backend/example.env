# Proof Verification Helper - Environment Configuration
# Copy this file to .env and update values for your environment

# ========================================
# APPLICATION SETTINGS
# ========================================

# Application environment (development, production, test)
NODE_ENV=production

# Server port (always 5001 for consistency)
PORT=5001

# ========================================
# SECURITY SETTINGS
# ========================================

# JWT Secret Key (CHANGE THIS IN PRODUCTION!)
# Generate a strong secret: openssl rand -base64 32
JWT_SECRET=your-super-secret-jwt-key-change-in-production-make-it-at-least-32-characters

# JWT Expiration time
JWT_EXPIRES_IN=7d

# CORS allowed origins (comma-separated)
ALLOWED_ORIGINS=http://localhost:3000

# ========================================
# AI/OLLAMA SETTINGS
# ========================================

# Enable Ollama AI features
OLLAMA_ENABLED=true

# Ollama server URL
OLLAMA_HOST=http://localhost:11434

# Ollama model to use
OLLAMA_MODEL=llama3.2

# Ollama request timeout (seconds)
OLLAMA_TIMEOUT=30

# ========================================
# DATABASE SETTINGS
# ========================================

# Database file path (SQLite)
STATE_FILE_PATH=./data/state.json

# ========================================
# LOGGING SETTINGS
# ========================================

# Log level (error, warn, info, http, debug)
LOG_LEVEL=info

# ========================================
# PRODUCTION FEATURES
# ========================================

# Domain name (for production)
DOMAIN=https://proof-helper.yourdomain.com

# SSL/TLS settings (for production deployment)
SSL_KEY_PATH=/etc/ssl/private/key.pem
SSL_CERT_PATH=/etc/ssl/certs/cert.pem

